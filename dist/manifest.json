{
    "author":"Saviio",
    "manifest_version": 2,
    "name": "Bookstore.Extension",
    "version": "0.0",
    "description": "Fetch the rate of book from douban and display it in the website.",
    "background": {
        "persistent": false,
        "scripts": ["js/rating.js","js/vue.min.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://*.jd.com/*"],
            "js": ["js/content.js"],
            "run_at":"document_end",
            "css":["css/content.css"]
        },
        {
            "matches": ["*://*.amazon.cn/*"],
            "js": ["js/content.js"],
            "run_at":"document_end"
        },
        {
            "matches": ["*://*.dangdang.com/*"],
            "js": ["js/content.js"],
            "run_at":"document_end"
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Bookstore.Extension"
    },

    "permissions": ["activeTab","http://*.douban.com/","https://*.douban.com/"]
}
